<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222226"
    tools:context=".Schedule">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/Schedule_view_weeks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"></LinearLayout>

        <ScrollView
            android:id="@+id/schedule_scrollview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Schedule_view_weeks">

            <LinearLayout
                android:id="@+id/schedule_scroll_linear_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#222226"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#222226"
                android:gravity="center_horizontal|fill_horizontal|center_vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text="@string/schedule_name"
                    android:textAlignment="gravity"
                    android:textColor="#FFFFFF"
                    android:textSize="26sp" />

                <Button
                    android:id="@+id/schedule_people_selector_button"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal|center_vertical|end"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="@string/schedule_btn_personal"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"
                    android:theme="@style/GrayButtons"
                    app:cornerRadius="20dp"
                    app:rippleColor="#FFFFFF" />

                <Button
                    android:id="@+id/schedule_typeSelectorChanger"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal|center_vertical|end"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="#2F00FF"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="@string/schedule_btn_video"
                    android:textAllCaps="false"
                    android:textSize="12dp"
                    android:theme="@style/PurpleButtons"
                    app:cornerRadius="20dp"
                    app:iconPadding="0dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/Schedule_Text_Month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="Май 2022"
                    android:textColor="#FFFFFF"
                    android:textSize="22dp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="Месяц"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"
                    android:theme="@style/GrayButtons"
                    app:cornerRadius="20dp" />

            </TableRow>

        </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>